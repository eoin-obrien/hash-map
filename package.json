{
  "name": "deep-hash-map",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Eoin O'Brien",
    "email": "eoin@tracworx.ai",
    "url": "https://tracworx.ai/"
  },
  "description": "A drop-in replacement for the ES6 Map class that can use objects and arrays as keys with deep equality checks",
  "keywords": [
    "map",
    "hash",
    "hashtable",
    "hashmap",
    "deep-equal",
    "collection",
    "es6"
  ],
  "main": "dist/index.js",
  "module": "dist/deep-hash-map.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eoin-obrien/hash-map.git"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test",
    "commit": "commit",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/deep-hash-map.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/deep-hash-map.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "fast-deep-equal": "3.1.3",
    "node-object-hash": "2.3.10"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@commitlint/prompt-cli": "19.3.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@size-limit/preset-small-lib": "11.1.4",
    "@tsconfig/recommended": "1.0.7",
    "cz-conventional-changelog": "3.3.0",
    "dts-cli": "1.6.3",
    "husky": "9.0.11",
    "semantic-release": "24.0.0",
    "size-limit": "11.1.4",
    "tslib": "2.6.3",
    "typescript": "5.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
